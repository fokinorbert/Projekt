<Window x:Class="FilmWebAdmin.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Person" Height="320" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Name:" Grid.Row="0"/>
        <TextBox x:Name="PersonNameTextBox" Grid.Row="1" Margin="0,0,0,10"/>
        <Label Content="Role:" Grid.Row="2"/>
        <ComboBox x:Name="PersonRoleComboBox" Grid.Row="3" Margin="0,0,0,10">
            <ComboBoxItem Content="Actor"/>
            <ComboBoxItem Content="Director"/>
            <ComboBoxItem Content="Producer"/>
        </ComboBox>
        <Label Content="Birth Date:" Grid.Row="4"/>
        <DatePicker x:Name="PersonBirthDatePicker" Grid.Row="5" Margin="0,0,0,10"/>
        <Label Content="Birth Place:" Grid.Row="6"/>
        
        <TextBox x:Name="PersonBirthPlaceTextBox" Grid.Row="7" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Width="75" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>